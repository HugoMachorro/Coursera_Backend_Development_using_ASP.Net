<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IndexDemo_TempData</title>
</head>
<body>
    <h2>Utilizando Temp Data</h2>
    <h2>@TempData["Message"]</h2>
    <p> Son @TempData["CustomerCount"] clientes agregados en la lista.</p>

    <table>
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Customer Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TempData["CustomerList"] as List<Customer>)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </tbody>
    </table>

    @{
        TempData.Keep("Message");
    }

    <a asp-controller="customer" asp-action="Metodo_dos">Ir a Metodo_dos</a>

</body>
</html>
